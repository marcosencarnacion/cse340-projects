<main>
  <h1>Add New Vehicle</h1>

  <!-- Flash message -->
  <% if (locals.message && locals.message.length > 0) { %>
    <div class="notice"><%= message %></div>
  <% } %>

  <form method="post" action="/inv/add-inventory" class="registration-form">
    <div class="form-row">
      <label for="classification_id">Classification</label>
      <select id="classification_id" name="classification_id" required>
        <option value="">Select a classification</option>
        <% classifications.forEach(c => { %>
          <option value="<%= c.classification_id %>"><%= c.classification_name %></option>
        <% }) %>
      </select>
    </div>

    <div class="form-row">
      <label for="inv_make">Make</label>
      <input type="text" id="inv_make" name="inv_make" required>
    </div>

    <div class="form-row">
      <label for="inv_model">Model</label>
      <input type="text" id="inv_model" name="inv_model" required>
    </div>

    <div class="form-row">
      <label for="inv_year">Year</label>
      <input type="number" id="inv_year" name="inv_year" required min="1900" max="2099">
    </div>

    <div class="form-row">
      <label for="inv_description">Description</label>
      <textarea id="inv_description" name="inv_description" required></textarea>
    </div>

    <div class="form-row">
      <label for="inv_image">Image Path</label>
      <input type="text" id="inv_image" name="inv_image" placeholder="/images/vehicles/no-image.png" required>
    </div>

    <div class="form-row">
      <label for="inv_thumbnail">Thumbnail Path</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" placeholder="/images/vehicles/no-image-tn.png" required>
    </div>

    <div class="form-row">
      <label for="inv_price">Price</label>
      <input type="number" id="inv_price" name="inv_price" required>
    </div>

    <div class="form-row">
      <label for="inv_miles">Miles</label>
      <input type="number" id="inv_miles" name="inv_miles" required>
    </div>

    <div class="form-row">
      <label for="inv_color">Color</label>
      <input type="text" id="inv_color" name="inv_color" required>
    </div>

    <button type="submit" class="btn">Add Vehicle</button>
  </form>
</main>
