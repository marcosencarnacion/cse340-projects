<div class="container">
    <h1>Edit <%= inv_make %> <%= inv_model %></h1>
    
    <!-- Flash message -->
    <% if (locals.message && locals.message.length > 0) { %>
    <div class="notice"><%= message %></div>
    <% } %>

    <form action="/inv/update" method="post" id="updateForm">
        <input type="hidden" name="inv_id" value="<%= inv_id %>">
        
        <div class="form-row">
            <label for="classificationList">Classification:</label>
            <%- classificationSelect %>
        </div>

        <div class="form-row">
            <label for="inv_make">Make:</label>
            <input type="text" name="inv_make" id="inv_make" required 
                    value="<%= inv_make %>">
        </div>

        <div class="form-row">
            <label for="inv_model">Model:</label>
            <input type="text" name="inv_model" id="inv_model" required 
                    value="<%= inv_model %>">
        </div>

        <div class="form-row">
            <label for="inv_description">Description:</label>
            <textarea name="inv_description" id="inv_description" required><%= inv_description %></textarea>
        </div>

        <div class="form-row">
            <label for="inv_image">Image Path:</label>
            <input type="text" name="inv_image" id="inv_image" required 
                    value="<%= inv_image %>">
        </div>

        <div class="form-row">
            <label for="inv_thumbnail">Thumbnail Path:</label>
            <input type="text" name="inv_thumbnail" id="inv_thumbnail" required 
                    value="<%= inv_thumbnail %>">
        </div>

        <div class="form-row">
            <label for="inv_price">Price:</label>
            <input type="number" name="inv_price" id="inv_price" step="0.01" required 
                    value="<%= inv_price %>">
        </div>

        <div class="form-row">
            <label for="inv_year">Year:</label>
            <input type="number" name="inv_year" id="inv_year" min="1900" max="2099" required 
                    value="<%= inv_year %>">
        </div>

        <div class="form-row">
            <label for="inv_miles">Miles:</label>
            <input type="number" name="inv_miles" id="inv_miles" required 
                    value="<%= inv_miles %>">
        </div>

        <div class="form-row">
            <label for="inv_color">Color:</label>
            <input type="text" name="inv_color" id="inv_color" required 
                    value="<%= inv_color %>">
        </div>

        <div class="form-group">
            <label for="inv_amount">Stock Quantity</label>
                <input type="number" id="inv_amount" name="inv_amount" min="0" value="<%= inv_amount %>" required>
        </div>

        <div class="form-row">
            <input type="submit" value="Update Vehicle" id="updateBtn" disabled>
        </div>
    </form>
</div>



<script src="/js/inv-update.js"></script>