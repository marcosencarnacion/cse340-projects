<header id="top-header">
  <div class="header-inner">
    <span class="siteName">
      <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
      <% if (loggedIn) { %>
        <!-- Show welcome + logout -->
        <a href="/account" title="Manage your account">
          Welcome <%= accountData.account_firstname %>
        </a>
        <a href="/account/logout" title="Log out">LOGOUT</a>
      <% } else { %>
        <!-- Show login -->
        <a href="/account/login" title="Click to log in">MY ACCOUNT</a>
      <% } %>
    </div>
  </div>
</header>

<div class="hamburger" onclick="document.querySelector('nav ul').classList.toggle('active')">
  <span></span>
  <span></span>
  <span></span>
</div>
